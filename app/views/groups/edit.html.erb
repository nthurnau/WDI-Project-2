
<div class="form" style="color: white">
  <h1>Edit Event</h1>
    <%= form_for @group do |f| %>
  <div class="row">
    <div class="form-group">
      <%= f.label :event_name, "Name of PetDate", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
      <%= f.text_field :event_name, class: 'form-control' %> <br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :event_location, "Location For PetDate", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
      <%= f.text_field :event_location, class: 'form-control' %> <br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :event_date, "Date of PetDate", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
      <%= f.text_field :event_date, class: 'form-control' %> <br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :event_time, "Time for PetDate", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
      <%= f.text_field :event_time, class: 'form-control' %> <br>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-5">
        <%= f.submit %>
    </div>

    <% end %>
  </div>
</div>

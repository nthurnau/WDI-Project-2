<h1>Edit Your User Information</h1>
<div class="form">

<%= form_for @user, html: { multipart: true }, :class => 'form-horizontal' do |f| %>
<fieldset>
  <div class="form-group">
      <%= f.label :username, "Username", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= f.text_field :username, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :email, "Email", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= f.text_field :email, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :password, "Password", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= f.password_field :password, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :avatar, "Your Profile Photo", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= f.file_field :avatar %> <br>
      </div>
  </div>
<br><br>

<%= f.fields_for :profile, url: profiles_path, html: { multipart: true }, :class => 'form-horizontal' do | profile_form | %>
  <div class="form-group">
      <%= profile_form.label :name, "What is Pookie's name?", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.text_field :name, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= profile_form.label :avatar, "Pookie's Profile Photo", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.file_field :avatar %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= profile_form.label :location, "Location", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.text_field :location, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= profile_form.label :breed, "What breed is your pookie, and What Does He or She Look Like?", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.text_field :breed, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= profile_form.label :favorite_food, "What are Your Pookie's Favorite Foods?", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.text_area :favorite_food, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= profile_form.label :behavior, "How does your Pookie play with others? Is she or he a leader or a follower?", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.text_area :behavior, class: 'form-control' %> <br>
      </div>
  </div>

  <div class="form-group">
      <%= profile_form.label :activities, "What activities does Pookie like?", class: 'col-md-4 control-label' %>
      <div class="col-md-5">
        <%= profile_form.text_area :activities, class: 'form-control' %> <br>
      </div>
  </div>

<% end %>
<div class="form-group">
  <div class="col-md-5">
    <%= f.submit %>
</div>
<% end %>
</fieldset>
</div>


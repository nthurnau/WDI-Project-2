<h1>Edit Your User Information</h1>

<%= form_for @user, html: { multipart: true } do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %> <br>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %> <br>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password %> <br>

  <%= f.file_field :avatar %>

  <%= f.submit %>

<% end %>

<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url(:medium) %> <br><br>
      <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= image_tag @user.avatar.url(:thumb) %> <br><br>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
          <% @users.reverse.each do |u| %>
          <h3> <%= u.username %> </h3>
          <%= image_tag u.avatar.url(:medium) %> <hr>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>

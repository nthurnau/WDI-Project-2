<h1>Welcome, <%= @user.username %>!</h1>

<!-- <%= image_tag @user.avatar.url %> -->
<%= image_tag @user.avatar.url(:medium) %> <br><br>
<!-- <%= image_tag @user.avatar.url(:thumb) %> -->

<!-- wrapping the links in an if makes the edit and deletes impossible for other users -->
<div class="col-md-8">
   <% if @user.microposts.any? %>
     <h3>PetSounds (<%= @user.microposts.count %>)</h3>
     <ol class="microposts">
       <%= render @microposts %>
     </ol>
     <%= will_paginate @microposts %>
   <% end %>
 </div>

 <% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
  <% else %>
    <% new_session_path %>
  <% end  %>

<section class="stats">
      <%= render 'shared/stats' %>
    </section>
<%= render 'follow_form' %>


<% if @user == current_user  %>
  <%= link_to "Edit User Info", edit_user_path %> <br>
  <%= link_to "Edit Your Profile", edit_profile_path %> <br>
  <%= link_to "Go to Your Profile", profile_path %> <br>
  <%= link_to "Delete Your Account", destroy_user_path, method: :delete%>
<% end %>
